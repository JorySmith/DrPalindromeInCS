@model DrPalindromeInCS.Models.Palindrome

@{
    ViewData["Title"] = "Palindrome Check";
}
<div class="container col-xl-8 p-4 mt-5">
    <div class="row gy-2 h-100 row-cols-1 row-cols-md-2">
        <div class="col border-2 border-end">
            <h1 class="font-weight-bold lh-1 mb-3">Palindrome Test (String Reversal)</h1>
            <h4 class="lead">This program reverses a user's input string, reverses it, then determines if the word is a Palindrome or not</h4>
            <h5> A palindrome is a word that is spelled the same way forwards and backwards. For example, Dr. Awkward or madam.</h5>
            <h2 class="mt-5 border-bottom border-2">Instructions</h2>
            <p>Enter a word or phrase and then press the button. The program will then evaluate the string.</p>
        </div>
        <div class="col">
            <div>
                <h5>Enter a phrase</h5>
                @* Input form here *@
                <form class="row gy-2 gx-3" asp-action="Reverse" asp-controller="Home" method="post">
                    <div class="col">
                        <input class="form-control" asp-for="InputWord" value="@Model.InputWord" placeholder="Please type a word or phrase" />
                    </div>
                    <div class="col-12 d-flex align-items-center justify-content-start justify-content-lg-end">
                        <button id="btnSubmit" type="submit" class="btn btn-dark btn-lg">
                            Palindrome Test
                        </button>
                    </div>
                </form>
                <h5 class="mt-5 border-bottom border-2">Phrase Reversed</h5>
                <div class="col">
                    <p class="form-control">@Model.RevWord</p>
                </div>
                <h2 class="mt-5 border-bottom border-2">Plaindrome Result</h2>
                <div class="table-responsive">
                    <p id="results">
                        @Model.Message
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>